<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:background="#bbffaa"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击全屏"
      />

    <Button
        android:id="@+id/bt_smallscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击退出全屏"
        />


    <Button
        android:id="@+id/bt_hideBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏状态栏"
        />

    <Button
        android:id="@+id/bt_showBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示状态栏"
        />

    <Button
        android:id="@+id/bt_sys_webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用系统webView"
        />

    <Button
        android:id="@+id/bt_x5_webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用x5webview"
        />

</LinearLayout>